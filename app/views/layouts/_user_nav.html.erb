<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  <ul class="nav navbar-nav">
    <li><%= link_to "Books", books_path %><span class="sr-only">(current)</span></li>
    <!-- <li><a href="#">Checked-out Books</a></li> -->
  </ul>
  <div class="navbar-form navbar-left" role="search">
    <%= form_tag books_path, method: "get" do %>
      <div class="form-group">
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: 'Book titles', autocomplete: "off" %>
      </div>
      <%= submit_tag "Search", class: "btn btn-default" %>
      <% if params[:query].present? %>
        <%= link_to "Clear", books_path %>
      <% end %>
    <% end %>
  </div>
  <ul class="nav navbar-nav navbar-right">
    <p class="navbar-text">Signed in as <%= current_user.name %></p>
    <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Settings <span class="caret"></span></a>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Edit my profile", edit_user_registration_path %></li>
        <li class="divider"></li>
        <li><a href="#">Report issue</a></li>
      </ul>
    </li>
  </ul>
</div><!-- /.navbar-collapse -->
