<div class="text-center">
  <div class="row">
  <h2 class="col-md-4 col-md-offset-4"><%= @locations.count %> locations</h2>
  <br>
  <%= link_to "Add location", new_location_path, class: "btn btn-default text-right" if current_user.try(:admin?) %>
  </div>
</div><br>
<div class="panel panel-default">
  <table class="table">
    <thead class="active">
      <th>Name</th>
      <th>Location</th>
      <th class="text-center">Number of users</th>
      <th class="text-center">Number of books</th>
      <th class="text-center">Books available</th>
      <% if current_user.try(:admin?) %><th class="text-center">Options</th><% end %>
    </thead>
    <% @locations.each do |location| %>
    <tbody>
      <td><%= link_to location.name, location_path(location) %></td>
      <td><% if location.state && location.country %><%= location.state %>, <%= location.country %><% end %></td>
      <td class="text-center"><%= location.users.count %></td>
      <td class="text-center"><%= location.books.count %></td>
      <td class="text-center"><%= location.available_books ? location.available_books.count : 0 %></td>
      <% if current_user.try(:admin?) %>
      <td class="text-center">
      <div class="btn-group">
        <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-default' %>
        <%= link_to 'Delete', location_path(location), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
      </div>
      </td>
      <% end %>
    </tbody>
    <% end %>
  </table>
</div>
<div class="text-center">
  <%= paginate @locations %>
</div>
