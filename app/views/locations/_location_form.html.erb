<br>
<div class="col-md-4 col-md-offset-4 text-center">
  <%= semantic_form_for @location, html: {class: "form-group"} do |f| %>
    <div class="form-group">
      <%= f.inputs name: @location.name, class: "text-center" do %>
      <br>
        <%= f.input :name, placeholder: " Name", label: false, input_html: { class: "form-control" } %>
        <%= f.input :address1, placeholder: " Address (line 1)", label: false, input_html: { class: "form-control" } %>
        <%= f.input :address2, placeholder: " Address (line 2)", label: false, input_html: { class: "form-control" } %>
        <%= f.input :city, placeholder: " City", label: false, input_html: { class: "form-control" } %>
        <%= f.input :state, placeholder: " State or Province", label: false, input_html: { class: "form-control" } %>
        <%= f.input :zip, placeholder: " Zip", label: false, input_html: { class: "form-control" } %>
        <%= f.input :country, only: ['US', 'CA', 'GB'], selected: 'US', label: false, input_html: { class: "form-control" } %>
      <% end %>
    </div>
    <div class="actions inline-block">
      <%= f.actions do %>
        <%= f.action :submit, as: :button, button_html: { class: "btn btn-default" }  %>
        <%= f.action :cancel, as: :link, html: { class: "btn btn-default" } %>
      <% end %>
    </div>
  <% end %>
  <br>
</div>