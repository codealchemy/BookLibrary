<div class="text-center">
  <div class="row">
  <h2 class="col-md-4 col-md-offset-4"><%= @users.count %> users</h2>
  <br>
  <%= link_to "Add user", new_users_admin_path, class: "btn btn-default text-right" %>
  </div>
</div><br>
<div class="panel panel-default">
  <table class="table">
    <thead class="active">
      <th width="10%">Name</th>
      <th width="10%">Email</th>
      <th>Last signed in</th>
      <th class="text-center" width="10%">Contributed</th>
      <th class="text-center" width="10%">Checked out</th>
      <th class="text-center" width="10%">Overdue</th>
      <th class="text-center">Is admin?</th>
      <th class="text-center" width="15%">Options</th>
    </thead>
    <tbody id="users">
    <%= render @users %>
    </tbody>
  </table>
</div>
<div class="text-center" id="paginator">
  <%= paginate @users, remote: true %>
</div>