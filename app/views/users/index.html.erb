<div class="text-center">
  <div class="row">
  <h2 class="col-md-4 col-md-offset-4">All users</h2>
  <br>
  <%= link_to "Add user", new_users_admin_path, class: "btn btn-default text-right" %>
  </div>
</div>
<div class="panel panel-default">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Last signed in</th>
      <th class="text-center">Books contributed</th>
      <th class="text-center">Books checked out</th>
      <th class="text-center">Books overdue</th>
      <th>Is admin?</th>
      <th>Options</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= time_ago_in_words(user.last_sign_in_at) if user.last_sign_in_at %></td>
      <td class="text-center"><%= user.books_owned.count %></td>
      <td class="text-center"><%= user.borrowed_books.count %></td>
      <td class="text-center"><%= user.overdue_books.count %></td>
      <td><%= user.admin? %></td>
      <td>
        <% if user.admin? %>
          <% unless user == current_user %>
            <%= button_to "Remove admin", method: 'remove_admin' %>
          <% end %>
        <% else %>
          <%= link_to "Make admin", method: 'make_admin', class: "btn btn-default" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>