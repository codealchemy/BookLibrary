<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Books</div>
  <div class="panel-body">
    <p>Here is a listing of the books that are available to check out</p>
  </div>

  <!-- Table -->
  <table class="table">
    <tr>
      <th>Genre</th>
      <th>Title (<small>and subtitle</small>)</th>
      <th>Author</th>
      <th>Description</th>
      <th>Checked out?</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= link_to book.title, book_path(book.id) %><br>
      <small><%= book.subtitle %></small></td>
      <td><%= book.author_name %></td>
      <td width="60%"><%= truncate(book.description, length: 100) %></td>
      <td><%= book.is_borrowed? %></td>
    </tr>
    <% end %>
  </table>
</div>