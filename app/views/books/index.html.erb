<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Books</div>
  <div class="panel-body">
    <p>Here is a listing of the books that are available to check out</p>
  </div>

  <!-- Table -->
  <table class="table">
    <tr>
      <th>Title</th>
      <th>ISBN</th>
      <th>Description</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.isbn %></td>
      <td width="60%"><%= book.description %></td>
    </tr>
    <% end %>
  </table>
</div>