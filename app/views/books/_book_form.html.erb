<div class="col-md-4 col-md-offset-4 text-center">
  <%= semantic_form_for @book, html: {class: "form-group"} do |f| %>
    <div class="form-group">
      <%= f.inputs :name => "New Book", class: "text-center" do %>
      <br>
        <%= f.input :title, placeholder: "Title (required)", label: false, input_html: { class: "form-control" } %>
        <%= f.input :subtitle, placeholder: "Subtitle", label: false, input_html: { class: "form-control" } %>
        <%= f.input :author_first_name, placeholder: "Author First Name", label: false, input_html: { class: "form-control" } %>
        <%= f.input :author_last_name, placeholder: "Author Last Name", label: false, input_html: { class: "form-control" } %>
        <%= f.input :isbn, placeholder: "ISBN (required)", label: false, input_html: { class: "form-control" } %>
        <%= f.input :description, placeholder: "Description", label: false, input_html: { class: "form-control" } %>
        <%= f.collection_select :user_id, all_users, :id, :name, { include_blank: true, prompt: 'Select book owner' }, class: 'btn btn-default dropdown-toggle' %>
        <%= f.collection_select :location_id, locations, :id, :name, { prompt: 'Select location' }, class: 'btn btn-default dropdown-toggle' %>
      <% end %>
    </div>
    <div class="actions">
      <%= f.actions do %>
        <%= f.action :submit, :as => :button, button_html: { class: "btn btn-default" }  %>
        <%= f.action :cancel, :as => :link %>
      <% end %>
    </div>
  <% end %>
  <br>
</div>